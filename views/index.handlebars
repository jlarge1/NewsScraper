<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">

        <h2>Articles from <a href="http://fastcompany.com/co-design">Fast Company Co.Design</a></h2>
        <form action="/scrape">
          <button type="submit" class="btn btn-primary" id="btn-scrape">Update article list</button>
        </form><br><br>
        <ul class="list-group">
          {{#each data}}
          <li data-id="{{this.id}}" class="list-group-item">
            <h4><a href="{{this.link}}" target="_blank">{{this.title}}</a></h4>
            <p class="comment">
              <a href="/viewcomments/{{this.id}}" class="showComments" comment-id="{{this.id}}">{{this.comments.length}} Comments</a>
              <a href="/comment/{{this.id}}" class="addCommment float-right" comment-id="{{this.id}}">Add Comment</a>
            </p>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>