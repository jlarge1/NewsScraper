<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/submit/{{data.id}}" method="post">

                <h2>{{{data.title}}}</h2>
                <a href="/">Back to article</a>
                <h3>Add a comment on this article!</h3>
                <div class="form-group">
                    <input type="text" class="form-control" name="author" placeholder="Name">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="body" placeholder="Write Comment Here"></textarea>

                </div>


                <button type="submit" class="btn btn-primary">Submit</button>


            </form>
        </div>
    </div>
</div>